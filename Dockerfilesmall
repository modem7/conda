# syntax = docker/dockerfile:latest
# Original image Size 2.6gb
# New image size 577.7mb

FROM condaforge/mambaforge-pypy3:4.9.2-7 AS build

# Conda Env names
ENV CONDAENV='test'

# Install the package as normal:
COPY environment.yml /
RUN mamba env create -f environment.yml

# Install conda-pack:
RUN mamba install -y -c conda-forge conda-pack

# Use conda-pack to create a standalone enviornment
# in /venv:
RUN conda-pack -n test -o /tmp/env.tar && \
    mkdir /venv && cd /venv && tar xf /tmp/env.tar && \
    rm /tmp/env.tar

# We've put venv in same path it'll be in final image,
# so now fix up paths:
RUN /venv/bin/conda-unpack

# The runtime-stage image; we can use Debian as the
# base image since the Conda env also includes Python
# for us.
FROM debian:buster AS runtime

# Copy entrypoint script
COPY --chmod=755 entrypoint.sh /

# Copy /venv from the previous stage:
COPY --from=build /venv /venv

# When image is run, run the code with the environment activated:
SHELL ["/bin/bash", "-c"]

ENTRYPOINT ["/venv/bin/tini", "-g", "--"]
CMD ["/entrypoint.sh"]